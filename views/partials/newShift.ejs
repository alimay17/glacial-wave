<form action="/newShift" method="POST">
  <span>Day:</span>
  <input type="date" name="day"/><br/>
  <span>AM:</span>
  <input type="radio" name="shift" value="am"/><br/>
  <span>PM:</span>
  <input type="radio" name="shift" value="pm"/><br/>
  <input class="btn btn-sm btn-primary" type="submit" value="Submit"/>
  <input class="btn btn-sm btn-secondary" type="reset" value="Reset"/>
</form>